<!DOCTYPE html>
<html>
<head>
  <title>For-Never Alone Project</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/custom.css" rel="stylesheet" type="text/css" media="all">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- login/logout form -->
	<% if current_user %>
    <%= link_to "Log Out", sessions_destroy_path %>
	<% else %>
	    <%= form_tag sessions_create_path do %>
	        <%= text_field_tag :username, nil, placeholder: "username" %>
	        <%= password_field_tag :password, nil,  placeholder: "password" %>
	        <%= submit_tag "Log In" %>
	    <% end %>
	<% end %>
<%= yield %>

	<!-- javascript -->
	<script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
